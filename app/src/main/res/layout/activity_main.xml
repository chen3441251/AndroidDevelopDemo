<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.androiddevelop.demo.androiddevelopdemo.MainActivity">

        <Button
            app:layout_constraintVertical_chainStyle="spread_inside"
            android:id="@+id/btn_class1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="第一章android新特性"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <Button
            android:id="@+id/btn_class2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="第2章"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_class3"
            app:layout_constraintTop_toBottomOf="@+id/btn_class1" />
        <Button
            android:id="@+id/btn_class3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="第3章"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_class4"
            app:layout_constraintTop_toBottomOf="@+id/btn_class2" />
        <Button
            android:id="@+id/btn_class4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="第4章"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_class5"
            app:layout_constraintTop_toBottomOf="@+id/btn_class3" />
        <Button
            android:id="@+id/btn_class5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="第5章"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_class6"
            app:layout_constraintTop_toBottomOf="@+id/btn_class4" />
        <Button
            android:id="@+id/btn_class6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="第6章"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_class7"
            app:layout_constraintTop_toBottomOf="@+id/btn_class5" />
        <Button
            android:id="@+id/btn_class7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="第7章"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_class8"
            app:layout_constraintTop_toBottomOf="@+id/btn_class6" />
        <Button
            android:id="@+id/btn_class8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="第8章"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_class9"
            app:layout_constraintTop_toBottomOf="@+id/btn_class7" />
        <Button
            android:id="@+id/btn_class9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="第9章"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_class10"
            app:layout_constraintTop_toBottomOf="@+id/btn_class8" />
        <Button
            android:id="@+id/btn_class10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="第10章"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_class9" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>